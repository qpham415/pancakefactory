<h1>All Items</h1>
<table border="1" style="width:100%">
  <tr>
    <th>Title</th>
    <th>Price Range</th>
  <tr>

  <% @items.each do |item| %>
    <tr>
      <td><%= item.title %></td>
      <td><%= item.price_range %></td>
      <td><%= link_to 'Show', item_path(item) %></td>
      <td><%= link_to 'Edit', edit_item_path(item) %></td>
      <td><%= link_to 'Destroy', item_path(item), method: :delete, data: { confirm:'Are you sure?'} %></td>
    </tr>
  <% end %>

  <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.price_range %></td>
      <td><%= product.id %></td>
    </tr>
  <% end %>

</table>
